# ========================================
# Configuração do Servidor Proxy API BB
# ========================================

# Credenciais OAuth (obrigatório)
BB_CLIENT_ID=seu_client_id_aqui
BB_CLIENT_SECRET=seu_client_secret_aqui
BB_DEV_APP_KEY=sua_dev_app_key_aqui

# URLs da API
BB_OAUTH_URL=https://oauth.bb.com.br
BB_API_URL=https://api-extratos.bb.com.br

# Certificado .p12 (IGUAL POSTMAN)
# Defina como 'true' para usar mTLS com certificado
USE_MTLS=true
BB_CERT_PATH=./certificados/certificado.p12
BB_CERT_PASSWORD=senha_do_certificado

# Servidor
PORT=3000
NODE_ENV=development
